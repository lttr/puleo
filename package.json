{
  "name": "@lttr/puleo",
  "author": "Lukas Trumm",
  "license": "MIT",
  "version": "0.6.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/lttr/puleo"
  },
  "keywords": [
    "css",
    "modular scale",
    "normalize"
  ],
  "main": "output/puleo.min.css",
  "style": "output/puleo.min.css",
  "type": "module",
  "scripts": {
    "build": "pnpm generate && run-p build:**",
    "build:objects": "postcss css/generated/objects.css -o output/objects.post.css",
    "build:objects:min": "postcss css/generated/objects.css -o output/objects.min.css --config ./nano",
    "build:props": "postcss css/generated/props.css -o output/props.post.css",
    "build:props:min": "postcss css/generated/props.css -o output/props.min.css --config ./nano",
    "build:scales": "postcss css/generated/scales.css -o output/scales.post.css",
    "build:scales:min": "postcss css/generated/scales.css -o output/scales.min.css --config ./nano",
    "build:puleo": "postcss css/index.css -o output/puleo.post.css",
    "build:puleo:min": "postcss css/index.css -o output/puleo.min.css --config ./nano",
    "build:postcss": "postcss 'css/**/*.css' --dir output/ --ext post.css",
    "build:postcss:min": "postcss 'css/**/*.css' --dir output/ --ext min.css --config ./nano",
    "build:examples": "postcss examples/css-features.css -o examples/css-features.post.css",
    "build:media": "cp ./node_modules/open-props/src/props.media.css output/media.css",
    "clean": "rm -rf output/*",
    "generate": "node src/build.js",
    "dev": "run-p watch start",
    "format": "prettier  --list-different --write .",
    "lint:js": "eslint .",
    "lint:styles": "stylelint '**/*.css'",
    "lint": "run-p lint:*",
    "prepublishOnly": "pnpm build",
    "release": "pnpm verify && changelogen --release --push && pnpm publish",
    "start": "browser-sync start --server --files . --no-notify --serveStatic ./public",
    "test": "exit 0",
    "verify": "pnpm format && pnpm lint && pnpm build && pnpm test",
    "watch": "run-p watch:**",
    "watch:postcss": "postcss --watch 'css/**/*.css' --dir output/ --ext post.css",
    "watch:generate": "nodemon --ext js --exec pnpm generate"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.1.0",
    "browser-sync": "^3.0.4",
    "changelogen": "^0.6.2",
    "cssnano": "^7.1.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-dark-theme-class": "^2.0.0",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0"
  },
  "dependencies": {
    "open-props": "^1.7.16"
  },
  "packageManager": "pnpm@10.17.1"
}
